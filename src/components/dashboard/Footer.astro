const currentYear = new Date().getFullYear()
---

<footer
	class="border-t border-gray-200 bg-white p-6 text-center text-sm text-gray-600 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300"
>
	<nav
		class="mb-4 flex items-center justify-center space-x-4 text-gray-500 sm:space-x-6 dark:text-gray-400"
	>
		<a
			href="/legal/privacy-policy"
			class="hover:text-indigo-600 hover:underline dark:hover:text-indigo-400">Privacy Policy</a
		>
		<a
			href="/legal/terms-and-conditions"
			class="hover:text-indigo-600 hover:underline dark:hover:text-indigo-400">Terms & Conditions</a
		>
