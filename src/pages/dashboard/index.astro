---
// src/pages/dashboard/index.astro
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Header from '../../components/dashboard/Header.astro';
import Sidebar from '../../components/dashboard/Sidebar.astro';

const pageTitle = "Dashboard Overview";
---
<DashboardLayout title={pageTitle}>
  <Fragment slot="head">
    <!-- Additional head elements specific to this page can go here -->
    <script is:inline src="/node_modules/alpinejs/dist/cdn.min.js" defer></script>
  </Fragment>

  <Header slot="header" pageTitle={pageTitle} />
  <Sidebar slot="sidebar" />

  {/* Main content for the dashboard overview */}
  <div class="p-6">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4">Welcome to your Dashboard!</h1>
    <p class="text-gray-600 mb-6">
      This is your main dashboard area. You can add widgets, charts, and other important information here.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {/* Example placeholder cards */}
      <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
        <h2 class="text-xl font-semibold text-gray-700 mb-2">Active Users</h2>
        <p class="text-3xl font-bold text-indigo-600">1,234</p>
        <p class="text-sm text-gray-500 mt-1">+5% from last week</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
        <h2 class="text-xl font-semibold text-gray-700 mb-2">Sales</h2>
        <p class="text-3xl font-bold text-indigo-600">$56,789</p>
        <p class="text-sm text-gray-500 mt-1">+12% from last month</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
        <h2 class="text-xl font-semibold text-gray-700 mb-2">New Signups</h2>
        <p class="text-3xl font-bold text-indigo-600">345</p>
        <p class="text-sm text-gray-500 mt-1">+8% from yesterday</p>
      </div>
    </div>

    <div class="mt-8 bg-white p-6 rounded-lg shadow">
      <h3 class="text-xl font-semibold text-gray-700 mb-3">Recent Activity</h3>
      <ul class="divide-y divide-gray-200">
        <li class="py-3">User John Doe registered.</li>
        <li class="py-3">Sale #12345 processed.</li>
        <li class="py-3">Server CPU usage at 85%.</li>
      </ul>
    </div>
  </div>
</DashboardLayout>
