---
// src/pages/dashboard/index.astro
import DashboardLayout from '../../layouts/DashboardLayout.astro'
import Header from '../../components/dashboard/Header.astro'
import Sidebar from '../../components/dashboard/Sidebar.astro'

const pageTitle = 'Dashboard Overview'
---

<DashboardLayout title={pageTitle}>
	<Fragment slot="head">
		<!-- Additional head elements specific to this page can go here -->
		<script is:inline src="/node_modules/alpinejs/dist/cdn.min.js" defer></script>
	</Fragment>

	<Header slot="header" pageTitle={pageTitle} />
	<Sidebar slot="sidebar" />

	{/* Main content for the dashboard overview */}
	<div class="p-6">
		<h1 class="mb-4 text-2xl font-semibold text-gray-800">Welcome to your Dashboard!</h1>
		<p class="mb-6 text-gray-600">
			This is your main dashboard area. You can add widgets, charts, and other important information
			here.
		</p>

		<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
			{/* Example placeholder cards */}
			<div class="rounded-lg bg-white p-6 shadow transition-shadow duration-200 hover:shadow-lg">
				<h2 class="mb-2 text-xl font-semibold text-gray-700">Active Users</h2>
				<p class="text-3xl font-bold text-indigo-600">1,234</p>
				<p class="mt-1 text-sm text-gray-500">+5% from last week</p>
			</div>
			<div class="rounded-lg bg-white p-6 shadow transition-shadow duration-200 hover:shadow-lg">
				<h2 class="mb-2 text-xl font-semibold text-gray-700">Sales</h2>
				<p class="text-3xl font-bold text-indigo-600">$56,789</p>
				<p class="mt-1 text-sm text-gray-500">+12% from last month</p>
			</div>
			<div class="rounded-lg bg-white p-6 shadow transition-shadow duration-200 hover:shadow-lg">
				<h2 class="mb-2 text-xl font-semibold text-gray-700">New Signups</h2>
				<p class="text-3xl font-bold text-indigo-600">345</p>
				<p class="mt-1 text-sm text-gray-500">+8% from yesterday</p>
			</div>
		</div>

		<div class="mt-8 rounded-lg bg-white p-6 shadow">
			<h3 class="mb-3 text-xl font-semibold text-gray-700">Recent Activity</h3>
			<ul class="divide-y divide-gray-200">
				<li class="py-3">User John Doe registered.</li>
				<li class="py-3">Sale #12345 processed.</li>
				<li class="py-3">Server CPU usage at 85%.</li>
			</ul>
		</div>
	</div>
</DashboardLayout>
