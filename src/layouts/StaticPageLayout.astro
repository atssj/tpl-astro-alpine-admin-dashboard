---
import { Home } from 'lucide-astro'

import Footer from '@/components/dashboard/Footer.astro'


export interface Props {
  title: string
}

const { title } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <title>{title} | Admin Dashboard</title>
  </head>
  <body
    class="flex min-h-screen flex-col bg-slate-50 text-slate-800 antialiased dark:bg-slate-900 dark:text-slate-200"
  >
    <header class="border-b bg-white shadow-sm dark:border-slate-700 dark:bg-slate-800">
      <nav class="container mx-auto flex items-center justify-between px-4 py-3 sm:px-6 lg:px-8">
        <a
          href="/"
          class="flex items-center text-lg font-semibold text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 dark:hover:text-indigo-500"
        >
          <Home class="mr-2 h-5 w-5" />
          <span>Admin Dashboard Home</span>
        </a>
      </nav>
    </header>

    <main class="container mx-auto flex-grow px-4 py-8 sm:px-6 lg:px-8">
      <article
        class="prose max-w-none rounded-lg bg-white p-6 shadow-lg md:p-8 lg:p-10 dark:bg-slate-800"
      >
        <h1 class="!mb-6 border-b pb-4 !text-4xl font-bold dark:border-slate-700">{title}</h1>
        <slot name="content" />
      </article>
    </main>

    <Footer />
  </body>
</html>
